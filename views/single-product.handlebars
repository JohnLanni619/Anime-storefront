<main>
    <!-- product page body -->
    <div class="product">

        <header>
            <h4> {{ product.product_name }} </h4>
            <!-- <h4>PRODUCT TAGLINE</h4> maybe. disregard for now -->
        </header>
        <div class="product-image images">
            <!-- product image goes here right justified -->
            <img src="{{ product.img_url }}" width="400" height="400" alt="DON'T FORGET ALT TAGS IF POSSIBLE">
        </div>


        <div class="product-price">
            <!-- pricing/size information left justified -->
            <section>
                <p>Price: ${{product.price}}</p>
                <!-- hopefully a dropdown for sizes -->
                <label for="sizes">Select Size:</label>
                <select name="sizes" id="sizes">
                    <option value="s">Small</option>
                    <option value="m">Medium</option>
                    <option value="l">Large</option>
                    <option value="xl">Extra Large</option>
                </select>
                <button class="add-to-cart"> Add to Cart</button>
            </section>
        </div>

        <div class="product-description">
            <!-- product description sidebar -->
            <section>
                <!-- mini-header -->
                <h5>PRODUCT DESCRIPTION</h5>
                <!-- short blurb -->
                <p>Thank you for checking out this super cool product! If you'd like to purchase, all items seen on this website are 10 billion percent property of <a href="https://www.sajustreetwear.com/">Saju.Studios</a>. PS - did you catch that Dr. Store reference?
                </p>
            </section>
        </div>

    </div>
    </div>
    <form class="comment-form">
        <div>
            <p class="review"> Tell us what you think!</p>
            <textarea name="comment-title" class="comment-title"></textarea>
        </div>

        <div>
            <textarea name="comment-body" class="comment-body"></textarea>
        </div>

        <div>
            <button type="submit">add comment</button>
        </div>
    </form>
    </div>
    <div class="posted-comment">
        {{#each product.comments}}
        <section>
            <!-- mini-header -->
            <h4> {{comment_title}}</h4>
            <!-- short blurb -->
            <p>
                {{comment_text}}
            </p>
            <p>
                posted by {{user.username}} on {{format_date created_at}}
            </p>
        </section>
        {{/each}}
    </div>
    </div>
</main>

<script src="/javascript/comment.js"></script>
